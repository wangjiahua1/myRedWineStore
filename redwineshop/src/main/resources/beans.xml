    <bean id="emailservice" class="com.igeek.service.imp.EmailServiceImpl"></bean>
    <bean id="emaildao" class="com.igeek.dao.imp.EmailDaoImpl"></bean>
    <bean id="collectservice" class="com.igeek.service.imp.CollectServiceImpl"></bean>
    <bean id="collectdao" class="com.igeek.dao.imp.CollectDaoImpl"></bean>
    <bean id="mypage" class="com.igeek.domain.Page"></bean>
    <bean id="commentservice" class="com.igeek.service.imp.CommentServiceImpl"></bean>
    <bean id="commentdao" class="com.igeek.dao.imp.CommentDaoImpl"></bean>
    <bean id="blogservice" class="com.igeek.service.imp.BlogServiceImpl"></bean>
    <bean id="blogdao" class="com.igeek.dao.imp.BlogDaoImpl"></bean>
